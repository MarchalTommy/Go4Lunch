<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" android:state_active="true">
        <shape android:shape="rectangle">
            <size android:height="24dp"/>
            <solid android:color="@color/white"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/primaryLightColor" android:width="1dp"/>
            <padding android:left="12dp" android:bottom="4dp" android:top="4dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <size android:height="24dp"/>
            <solid android:color="@color/white"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/black" android:width="1dp"/>
            <padding android:left="12dp" android:bottom="4dp" android:top="4dp"/>
        </shape>
    </item>

</selector>